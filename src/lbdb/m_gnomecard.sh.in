prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
AWK=@AWK@

rcfile=$HOME/.gnome/GnomeCard

m_gnomecard_query ()
{
    if [ -z "$GNOMECARD_FILES" ]
    then 
	if [ -r "$rcfile" ]
	then
	    GNOMECARD_FILES=`\
		$AWK 'BEGIN {FS="="; infile=0} \
		      /^\[.*\]/ {infile=0} \
		      /^\[file\]/ {infile=1} \
		      infile && /^open=/ {print $2}' \
		    < $rcfile`
	fi
	if [ -z "$GNOMECARD_FILES" ]
	then
	    GNOMECARD_FILES="$HOME/.gnome/GnomeCard.gcrd"
	fi
    fi
    
    for file in $GNOMECARD_FILES
    do
	if [ $file = ${file#/} ]
	then
	    file=$HOME/$file
	fi

	if [ -f $file ]
	then
	    $AWK 'BEGIN {FS=":"; RS="\r\n"; name=""} \
		  /^END:VCARD/ {name=""} \
		  /^FN[:;]/ {name=$2} \
		  name!="" && /^EMAIL;/ {email=$2; \
					 type=substr($1,7); \
					 printf ("%s\t%s\tGC:%s\n", \
						 email, name, type) }' \
            < $file | grep -ia "$@" || :
	fi
    done
}
